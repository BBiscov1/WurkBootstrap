{%extends "baseWOH.html"%}
{%block title%}Time Sheet{%endblock%}

{%block content%}
<div class="container-fluid">
    <div class="col">
      <table class="table table-hover">
        <thead>
          <tr>
            {%if type == "applicant"%}
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Jobs</th>

          </tr>
        </thead>
        <tbody>
          {%for i in lst%}

          <tr>
            <th scope="row">{{i.fullname}}</th>
            <td>{{i.email}}</td>
            <td>{{i.phonenumber}}</td>
            <td>{{i.jobs}}</td>
          </tr>

          {%endfor%}
        </tbody>
            {%elif type == "timesheet"%}
            <th scope="col">Wurker Name</th>
            <th scope="col">Type of Job</th>
            <th scope="col">Time In</th>
            <th scope="col">Time Out</th>

          </tr>
        </thead>
        <tbody>
          {%for i in lst%}

          <tr>
            <th scope="row">{{personalinfo.query.get(i.wurker).firstname}}</th>
            <td>{{i.jobtype}}</td>
            <td>{{i.timein}}</td>
            <td>{{i.timeout}}</td>
          </tr>

          {%endfor%}
        </tbody>
            {%endif%}

      </table>
    </div>
  </div>
</body>
{%endblock%}
