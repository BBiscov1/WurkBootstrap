{% extends "baseWH.html" %}
{%block title%}Home{%endblock%}
{%block content%}
<style>
  .parallax {
    /* The image used */
    background-image: url("{{url_for('static', filename='/css/img/paralax.jpg')}}");

    /* Set a specific height */
    height: 1000px;

    /* Create the parallax scrolling effect */
    background-attachment: fixed;
    background-position: bottom;
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
<div class="container-fluid">
  <div class="row border border-primary">
    <div class="col p-0 text-white text-light">
      <div class="parallax-window text-center m-0 d-flex flex-column justify-content-center" data-parallax="scroll"
        data-image-src="static/css/img/paralax.jpg" alt='Landscaping'>
        <span class="bg-transdark p-3 my-5">
          <h1 class="display-1">Wurk Services</h1>
          <h1 class="display-4">We do all odd jobs. Work less with Wurk today!</h2>
            <p>Wurk Services is a management company. From maintaining your property to tutoring your kids and caring
              for
              your
              pets, we provide a full array of services available at a moment's notice. All you need to do is book! Wurk
              does
              all odd jobs so you donâ€™t have to. Our specialists come to you with competitive pricing to get your job
              done
              with utmost satisfaction. Work less with Wurk today!</h3>
            <p><b>What are you waiting for? Select one of our services below!</b></p>
            <a class="btn btn-outline-light" href="/login">Or if you already have an account, sign in!</a>
        </span>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row p-3">
    {%for i in types%}
    <div class="col">
      <div class="card mx-auto" style="width: 18rem;">
        <img class="card-img-top"
          src="{{url_for('static', filename='/css/img/' + i[0].replace(' ','-').lower() + '.jpg')}}" alt="{{i[0]}}">
        <div class="card-body">
          <h5 class="card-title">{{i[0]}}</h5>
          <p class="card-text">{{i[1]}}</p>
          <button type="button" class="btn btn-outline-primary stretched-link" data-toggle="modal" data-target="#{{i[0].replace(' ','-').lower()}}">Take a
            look!</button>

        </div>
      </div>
    </div>
    {%endfor%}
  </div>
</div>

{%for i in types%}
<div id="{{i[0].replace(' ','-').lower()}}" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">{{i[0]}}</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="card-deck">
          {%if i[0] == 'Property Management'%}
          {%set list = prop_dict%}
          {%elif i[0] == "Home Improvement"%}
          {%set list = home_dict%}
          {%else%}
          {%set list = personal_dict%}
          {%endif%}
         {%for k in list%}

          <div class="card text-dark shadow shadow-lg border border-primary mb-4"
            style="min-width: 10rem;  max-width: 20rem; word-wrap: normal;" data-aos="fade-right"
            data-aos-duration="1000">
            <img class="card-img-top border border-primary"
              src="{{ url_for('static', filename='css/img/' + k + '.jpg') }}" alt="{{k}}">
            <div class="card-body">
              <h5 class="card-title">{{k}}</h5>
            </div>
            <div class="card-footer bg-white">
              {%set k = k.replace(" ", "-")%}
              {%if k == 'Lawn-Care'%}
              <a href="/landscaping" class="btn btn-outline-primary stretched-link text-center">Learn More</a>
              {%elif k == 'Tutoring'%}
              <a href="/tutoring" class="btn btn-outline-primary stretched-link text-center">Learn More</a>
              {%else%}
              <a href="/services/{{k}}-barrington-il" class="btn btn-outline-primary stretched-link text-center">Learn
                More</a>
              {%endif%}
            </div>
          </div>
          {%endfor%}
        </div>

      </div>
    </div>

  </div>
</div>
{%endfor%}
</body>
{%endblock%}